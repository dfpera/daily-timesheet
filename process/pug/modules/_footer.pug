//- modules/_footer.pug

mixin footer()
  footer
    .form--state-input.grid.grid-gap--md
      .clear
        input(
          type='reset'
          value='Clear'
        ).btn.btn--accent.btn--full-width
      .submit
        input(
          type='submit'
          value='Submit Timesheet'
        ).btn.btn--primary.btn--full-width
    .form--state-error
      input(
        type='button'
        value='Try Again'
      ).btn.btn--primary.btn--full-width
    .form--state-success
      input(
        type='button'
        value='Submit Another Timesheet'
      ).btn.btn--primary.btn--full-width